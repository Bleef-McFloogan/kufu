{
    "manifest_version": 2,
    "name": "kufu",
    "description": "Tracks the websites you visit and the time you spend on each one.",
    "version": "1.0",
    "background": {
        "page": "background.html"
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "kufu"
    },
    "permissions": [
        "tabs",
        "alarms",
        "storage"
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}
