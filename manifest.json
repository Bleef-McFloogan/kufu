{
    "manifest_version": 2,
    "name": "Kufu",
    "description": "Provides a rich view of browsing history.",
    "version": "1.0",
    "background": {
        "page": "/views/background.html"
    },
    "browser_action": {
        "default_icon": "/resources/icon.png",
        "default_popup": "/views/popup.html",
        "default_title": "kufu"
    },
    "permissions": [
        "tabs",
        "alarms",
        "storage"
    ],
    "icons": {
        "16": "/resources/icon16.png",
        "48": "/resources/icon48.png",
        "128": "/resources/icon128.png"
    }
}
